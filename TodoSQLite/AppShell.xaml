<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TodoSQLite.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:TodoSQLite.Views"
    Shell.FlyoutBehavior="Flyout">
    <TabBar>
        <Tab Title="Calculator">
            <ShellContent
                Title="Calculator"
                ContentTemplate="{DataTemplate views:TodoItemPage}"
                Shell.TitleColor="CadetBlue"
                Shell.BackgroundColor="Black" />
        </Tab>
        <Tab Title="History">
            <ShellContent
                Title="History"
                ContentTemplate="{DataTemplate views:TodoListPage}"
                Shell.TitleColor="CadetBlue"
                Shell.BackgroundColor="Black" />
        </Tab>
    </TabBar>
</Shell>
